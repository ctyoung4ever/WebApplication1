<form method="post">
    <label>
        Assignments
    </label>
    <input asp-for="assignments" id="assignments" type="number" />
    <br />
    <label>
        Group Project
    </label>
    <input asp-for="groupProject" id="groupProject" type="number" />
    <br />
    <label>
        Quizzes
    </label>
    <input asp-for="quizzes" id="quizzes" type="number" />
    <br />
